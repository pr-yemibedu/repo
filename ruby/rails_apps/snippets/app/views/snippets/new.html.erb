<h1>New snippet</h1>

<%= error_messages_for :snippet %>

<% form_for(@snippet) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Format</b><br />
    <%= f.select :format, Snippet.formats %>
  </p>


  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <b>Tags</b><br />
    <%= f.text_field :tag_list %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', snippets_path %>
